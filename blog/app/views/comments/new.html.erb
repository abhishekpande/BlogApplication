<%= form_for([@article, @article.comments.new]) do |f| %>
 <div class="field">
 <%= f.label :name %><br />
 <%= f.text_field :name %>
 </div>
 <div class="field">
 <%= f.label :email %><br />
 <%= f.text_field :email %>
 </div>
 <div class="field">
 <%= f.label :body %><br />
 <%= f.text_area :body %>
 </div>
 <div class="actions">
 <%= f.submit 'Add' %>
 </div>
$("<%= escape_javascript render(file: 'comments/new.html.erb') %>").insertAfter('#comments');
$('#new_comment_link').hide();


<% end %>